<h2 class="decoration-title red-decoration-title">ПОТВЪРЖДАВАНЕ НА ПОРЪЧКАТА</h2>
<div id="checkout-basket-wrapper">
    <div class="basket-header font-bold">
        <div id="product-header">ПРОДУКТ</div>
        <div id="quantity-header">КОЛИЧЕСТВО</div>
        <div id="price-header">ЦЕНА</div>
    </div>
    <div class="cart-item-container">
        {{#if this}}
        {{#each this}}
        <div class="cart-item">
            <div class="image-container">
                <img src="./assets/images/{{this.prod.image}}" alt="{{this.prod.title}}">
            </div>
            <div class="details-container">
                {{#if this.prod.selectedType}}
                <p><span class="blue-txt font-bold">{{this.prod.title}} {{this.prod.selectedType}}</span></p>
                {{else}}
                <p><span class="blue-txt font-bold">{{this.prod.title}}</span></p>
                {{/if}}
                {{{printProductDetails this.prod}}}
            </div>
            <div class="quantity-wrapper">
                <img class="minus quantity-controller" alt="minus" src="./assets/images/minus.svg">
                <span class="quantity-number">{{this.quantity}}</span>
                <img class="plus quantity-controller" alt="minus" src="./assets/images/plus.svg">
            </div>
            <div class="price-container">{{getProductFinalPrice this}}лв.</div>
            <div class="x-container">
                <img class="remove-x" src="./assets/images/delete_cross.svg" alt="remove from cart">
            </div>
        </div>
        {{/each}}
        {{/if}}

